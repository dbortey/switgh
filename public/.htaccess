# Enable rewrite engine
RewriteEngine On

# Allow existing files and directories to be served directly
# This ensures /api/auth.php, /api/diagnose.php, etc. work properly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Optional: Route all other requests to index.html for SPA
# Uncomment the next line if you need SPA routing
# RewriteRule ^ index.html [L]

# Security: Prevent directory browsing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8
